{
    "name": "rlanvin/php-form",
    "type": "library",
    "description": "Lightweight form validation library for PHP",
    "keywords": ["form","validation"],
    "homepage": "https://github.com/rlanvin/php-form",
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "ext-mbstring":"*"
    },
    "suggest": {
        "ext-intl": "Intl extension is useful for validating formatted numbers"
    },
    "autoload": {
        "psr-4": {
            "Form\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5|^8.0",
        "phpmd/phpmd" : "@stable",
        "squizlabs/php_codesniffer": "3.*",
        "friendsofphp/php-cs-fixer": "2.*"
    },
    "autoload-dev": {
        "psr-4": {
            "Form\\Tests\\": "tests/"
        }
    }
}